<!DOCTYPE html>
<html>
<head>
	<title>Givon</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="content">
		<% if flash[:error] || flash[:notice] || flash[:alert] %>
		<div class="alerts-container t-center">
			<div class="alerts">
				<% if flash[:error] %>
				<div class="alert alert-error"><%= flash[:error] %></div>
				<% end %>
				<% if flash[:alert] %>
				<div class="alert alert-success"><%= flash[:alert] %></div>
				<% end %>
				<% if flash[:notice] %>
				<div class="alert alert-info"><%= flash[:notice] %></div>
				<% end %>
			</div>
		</div>
		<% end %>
		<div class="container">
			<%= yield %>
		</div>
	</div>
</body>
</html>
